<div class="container">
	<div class="col-md-offset-2 col-md-8 log-theme">
		<h2>Modifier vos informations</h2>
		
		<div class="col-md-offset-1 col-md-10">
			{{ form_start(form, { 'attr': {'class': ''} })  }}
				<div class="form-group">
					{{ form_label(form.username, "Nom d'utilisateur") }}
					{{ form_widget(form.username,{'attr': {'class': 'form-control', 'disabled': 'disabled'}}) }}
					{{ form_errors(form.username) }}
				</div>			
			
				<div class="form-group">
					{{ form_label(form.email, "Adresse e-mail") }}
					{{ form_widget(form.email,{'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.email) }}
				</div>
				
				<div class="form-group">
					{{ form_label(form.current_password, "Confirmez votre mot de passe") }}
					{{ form_widget(form.current_password,{'attr': {'class': 'form-control'}}) }}
					{{ form_errors(form.current_password) }}
				</div>
				
				<button type="submit" class="btn btn-success col-md-offset-5">Soumettre</button>
			{{ form_end(form) }}
		</div>
	</div>
</div>