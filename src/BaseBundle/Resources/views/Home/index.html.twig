{# src/BaseBundle/Resources/views/Home/index.html.twig #}
{% extends "::base.html.twig" %}
		
		{% block body %}
		<section class="projet-semaine">
			<div class="row">
				<div class="col-md-1"></div>
				<div class="col-md-10">
					<h1 class="titre-projetsemaine">Projets de la semaine</h1>


			        {% for project in projects %}
					<div class="col-md-6">
						<div>
							<div class="col-md-4">
								<img src="{{ asset('uploads/membres/' ~ project.image) }}" alt="" class="img-circle img-projet">


								<div class="progress bar-prog-index">
							          <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%;">
							            {{ project.amountWon / project.amountRequested * 100 }}%
							          </div>
							    </div>


							</div>
							<div class="col-md-8">
								<h4>{{project.title}}</h4>

								<span>
									{{ project.description | slice(0,250)}}
								</span>
							</div>
						</div>
					</div>
					{% endfor %}

				</div>
			</div>
		</section>
		{% endblock %}
