							<p> Cr√©e par ; {{auteur.username}}</p>

							{% else %}

								{% set participants = participants ~ auteur.username ~ ',' %}
							{% endif %}		
						{% endfor %}

						avec la participations de {{participants}}
						
						
						
					
							
					{% endfor %}
				</div>
			</div>
		</div>



	
